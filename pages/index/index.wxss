@import "/common/style/common.wxss";
page{
  height: 100%;
}
.container{
  font-size:32rpx;
  height: 100%;
  position: relative;
}

.header text{
  background-color: #f7f5f4;
  height: 40px;
  line-height: 40px;
  color:#a8c7d2;
  font-size:24rpx;

}

.tx{
  width:80rpx;
  height:80rpx;
  margin-top:20rpx;
}
.box{
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.box  input{
 border-bottom: 2rpx solid #ccc;  
 text-align: center;
 height: 98rpx;
 vertical-align: text-bottom;
 display: inline-block;
 margin: 0 25%;
 padding-top:30rpx;
 box-sizing: border-box;
 font-size: 32rpx;
}
.box text{
   font-size: 32rpx;
   margin-top:42rpx;
}
.delete{
  width:40rpx;
  height:50rpx;
  margin-top:40rpx;
}
.btn{
background:#e17c6b;
color:#fff;
width:150rpx;
height:60rpx;
line-height:60rpx;
border-radius:10rpx;
display:inline-block;

}
.footer{
position: absolute;
bottom:0;  
background:#f6f5f3;
width:100%;
height:150rpx;
padding-top:30rpx;
box-sizing:border-box;
}

.footer text,.footer input{
  font-size: 48rpx;
  height: 52rpx;
  line-height: 52rpx;
}
.footer input{
 border-bottom: 2rpx solid #ccc;
 margin:0 25%;
}
.footer .col-sm-4{
  margin-top:34rpx;
}

.wrapper{
 overflow-y:auto;
 height:calc(100% - 180rpx);  
}